<body>
    <script>
    function coolSum() {
        var sum = 0;
        for (let i = 0; i <arguments.length; ++i){
            sum += arguments[i]
        }
        return sum ; 
    }
        console.log(coolSum());
        console.log(coolSum(1));
        console.log(coolSum(1,2));
        console.log(coolSum(1,2,3));
        console.log(coolSum(1,2,3,4));  
    </script>
</body>
</html>
